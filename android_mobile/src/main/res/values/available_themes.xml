<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
  tools:ignore="MissingTranslation">

  <style name="Theme.Memento.BloodyCherry"
    parent="@style/Theme.Memento.Light.DarkToolbar">
    <item name="colorPrimary">@color/primary_red</item>
    <item name="colorPrimaryDark">@color/primary_dark_red</item>
    <item name="colorSecondary">#F15454</item>
    <item name="colorAccent">#F1B554</item>
  </style>

  <style name="Theme.Memento.Monochrome"
    parent="@style/Theme.Memento.Light.LightToolbar">
    <item name="colorPrimary">#FAFAFA</item>
    <item name="colorPrimaryDark">#EEEEEE</item>
    <item name="colorSecondary">#424242</item>
    <item name="colorAccent">#424242</item>
    <item name="primaryTextColorInverse">@color/black_light</item>
  </style>

  <style name="Theme.Memento.Eggplant"
    parent="@style/Theme.Memento.Light.DarkToolbar">
    <item name="colorPrimary">#4CAF50</item>
    <item name="colorPrimaryDark">#43A047</item>
    <item name="colorSecondary">#C8E6C9</item>
    <item name="colorAccent">#AA00FF</item>
  </style>

  <style name="Theme.Memento.NavyBlue"
    parent="@style/Theme.Memento.Light.DarkToolbar">
    <item name="colorPrimary">#3F51B5</item>
    <item name="colorPrimaryDark">#1A237E</item>
    <item name="colorSecondary">#C5CAE9</item>
    <item name="colorAccent">#FF4081</item>
  </style>

  <style name="Theme.Memento.Amber"
    parent="@style/Theme.Memento.Light.DarkToolbar">
    <item name="colorPrimary">#FFB300</item>
    <item name="colorPrimaryDark">#FF8F00</item>
    <item name="colorSecondary">#FFD54F</item>
    <item name="colorAccent">#D50000</item>
  </style>

  <style name="Theme.Memento.GlossPink"
    parent="@style/Theme.Memento.Light.DarkToolbar">
    <item name="colorPrimary">#F06292</item>
    <item name="colorPrimaryDark">#EC407A</item>
    <item name="colorSecondary">#F8BBD0</item>
    <item name="colorAccent">#AB47BC</item>
  </style>


  <style name="Theme.Memento.Systemo"
    parent="@style/Theme.Memento.Light.DarkToolbar">
    <item name="colorPrimaryDark">@android:color/black</item>
    <item name="colorPrimary">#ff212121</item>
    <item name="colorAccent">#009688</item>
    <item name="colorSecondary">#80CBC4</item>
  </style>

  <style name="Theme.Memento.Modern"
    parent="@style/Theme.Memento.Light.DarkToolbar">
    <item name="colorPrimary">#C3195D</item>
    <item name="colorPrimaryDark">#680747</item>
    <item name="colorSecondary">#C3195D</item>
    <item name="colorAccent">#F70776</item>
  </style>


  <attr name="useDarkIcons"
    format="boolean" />
  <attr name="colorSecondary"
    format="color" />
  <attr name="toolbarTheme"
    format="reference" />

  <string name="theme_BloodyCherry">Bloody Cherry</string>
  <string name="theme_NavyBlue">Navy Blue</string>
  <string name="theme_Monochrome">Monochrome</string>
  <string name="theme_GlossPink">Gloss Pink</string>
  <string name="theme_Eggplant">Eggplant</string>
  <string name="theme_Systemo">Systemo</string>
  <string name="theme_Amber">Amber</string>


</resources>
