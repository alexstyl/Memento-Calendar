<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:foreground="?android:attr/selectableItemBackground">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.alexstyl.specialdates.ui.widget.ColorImageView
      android:id="@+id/row_upcoming_event_contact_image"
      style="@style/Upcoming.Avatar"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="10dp"
      tools:background="#000" />

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">

      <TextView
        android:id="@+id/row_upcoming_event_contact_name"
        style="@style/Upcoming.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Alex Styl" />

      <TextView
        android:id="@+id/row_upcoming_event_contact_event"
        style="@style/Upcoming.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        tools:text="Turns 26"
        tools:textColor="@color/anniversary_yellow" />

    </LinearLayout>

  </LinearLayout>
</android.support.v7.widget.CardView>
